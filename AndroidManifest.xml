<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rdx.one.rdx"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="rdx.one.rdx.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="rdx.one.rdx.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="rdx.one.rdx.AudioActivity"
            android:label="@string/title_activity_audio" >
        </activity>
        <activity
            android:name="rdx.one.rdx.VideoActivity"
            android:label="@string/title_activity_video" >
        </activity>
        <activity
            android:name="rdx.one.rdx.GalleryActivity"
            android:label="@string/title_activity_gallery" >
        </activity>
        <activity
            android:name="rdx.one.rdx.MailActivity"
            android:label="@string/title_activity_mail" >
        </activity>
        <activity
            android:name="rdx.one.rdx.VideosActivity"
            android:label="@string/title_activity_videos" >
        </activity>
    </application>

</manifest>
